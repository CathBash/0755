<?php
class Person
{
  private $name;
  private $lastname;
  private $age;
  private $mother;
  private $father;
  private $grandpa;
  private $granddad;
  private $grandma;
  private $granny;


  function __construct($name, $lastname, $age, $mother = null, $father = null, $grandpa = null,  $grandma = null, $granddad = null, $granny = null)
  {
    $this->name = $name;
    $this->lastname = $lastname;
    $this->age = $age;
    $this->mother = $mother;
    $this->father = $father;
    $this->grandpa = $grandpa;
    $this->granddad = $granddad;
    $this->grandma = $grandma;
    $this->granny = $granny;
  }
  function sayHi($name)
  {
    return "Hi, $name, I'm " . $this->name;
  }
  function getName()
  {
    return $this->name;
  }
  function getAge()
  {
    return $this->age;
  }
  function getMother()
  {
    return $this->mother;
  }
  function getFather()
  {
    return $this->father;
  }
  function getLastname()
  {
    return $this->lastname;
  }
  function getGrandpa()
  {
    return $this->grandpa;
  }
  function getGranddad()
  {
    return $this->granddad;
  }
  function getGrandma()
  {
    return $this->grandma;
  }
  function getGranny()
  {
    return $this->granny;
  }
  function getInfo()
  {
    return "
    <h3>A few worlds about maself:</h3><br>" . "My name is: " . $this->getName() . "<br>My lastname is: " . $this->getLastname() . "<br>Im years old: " . $this->getAge() . "<br>My father is: " . $this->getFather()->getName() . "<br>My mother is: " . $this->getMother()->getName() . "<br>Paternal grandfather is: " . $this->getGrandpa()->getName() . "<br>Paternal grandmother is: " . $this->getGrandma()->getName() . "<br>Maternal grandfather is: " . $this->getGranddad()->getName() . "<br>Maternal grandmother is: " . $this->getGranny()->getName();
  }
}


$volodya = new Person("Volodya", "Barhudarian", 76);
$rimma = new Person("Rimma", "Barhudarian", 73);

$sergey = new Person("Sergey", "Bashta", 73);
$galina = new Person("Galina", "Bashta", 70);

$ura = new Person("Ura", "Bashta", 45, $sergey, $galina);
$anna = new Person("Anna", "Bashta", 44, $volodya, $rimma);
$kate = new Person("Kate", "Bashta", 22, $anna, $ura, $sergey, $galina, $volodya, $rimma);

echo $kate->getInfo();
